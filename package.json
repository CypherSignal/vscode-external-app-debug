{
	"name": "snes-dev",
	"displayName": "SNES Dev",
	"version": "0.0.1",
	"publisher": "cyphersignal",
	"description": "Extension to improve debugging experience of SNES roms and patches",
	"author": {
		"name": "Cypher Signal"
	},
	"license": "MIT",
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.18.0"
	},
	"icon": "images/snes-dev-icon-256.png",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"repository": {
		"type": "git",
		"url": "https://github.com/CypherSignal/vscode-snes-dev.git"
	},
	"bugs": {
		"url": "https://github.com/CypherSignal/vscode-snes-dev/issues"
	},
	"scripts": {
		"prepublish": "tsc -p ./src",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"watch": "tsc -w -p ./src",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"package": "vsce package",
		"publish": "vsce publish"
	},
	"dependencies": {
		"await-notify": "1.0.1",
		"typescript-compiler": "^1.4.1-2",
		"vscode-debugadapter": "1.27.0",
		"vscode-debugprotocol": "1.27.0"
	},
	"devDependencies": {
		"@types/node": "7.0.55",
		"tslint": "5.9.1",
		"typescript": "2.6.2",
		"vsce": "1.37.5",
		"vscode": "^1.1.17"
	},
	"main": "./out/extension",
	"activationEvents": [
		"onDebug",
		"onCommand:extension.snes-dev-debug.getRomLocation"
	],
	"contributes": {
		"breakpoints": [
			{
				"language": "assembly"
			}
		],
		"debuggers": [
			{
				"type": "snes-dev-debug",
				"label": "SNES Debug",
				"adapterExecutableCommand": "extension.snes-dev-debug.getEmulatorLocation",
				"configurationAttributes": {
					"launch": {
						"required": [
							"rom"
						],
						"properties": {
							"rom": {
								"type": "string",
								"description": "Absolute path to a ROM file to run in the emulator.",
								"default": "${workspaceFolder}/${command:GetRomLocation}"
							},
							"stopOnEntry": {
								"type": "boolean",
								"description": "Automatically stop after launch.",
								"default": true
							},
							"trace": {
								"type": "boolean",
								"description": "Enable logging of the Debug Adapter Protocol.",
								"default": true
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"type": "snes-dev-debug",
						"request": "launch",
						"name": "Ask for file name",
						"program": "${workspaceFolder}/${command:GetRomLocation}",
						"stopOnEntry": true
					}
				],
				"configurationSnippets": [
					{
						"label": "Snes-Dev Debug: Launch",
						"description": "Configuration for debugging a ROM in an emulator.",
						"body": {
							"type": "snes-dev-debug",
							"request": "launch",
							"name": "Ask for file name",
							"program": "^\"\\${workspaceFolder}/\\${command:GetRomLocation}\"",
							"stopOnEntry": true
						}
					}
				],
				"variables": {
					"GetRomLocation": 		"extension.snes-dev-debug.getRomLocation",
					"GetEmulatorLocation":	"extension.snes-dev-debug.getEmulatorLocation"
				}
			}
		],
		"configuration":[
			{
				"title": "SNES-Dev",
				"properties": {
					"snes-dev-debug.emulatorPath": {
						"type" : "string",
						"default": "",
						"description": "The path of the emulator to launch (either absolute, or resolved via PATH)."
					}
				}
			}
		]
	}
}
